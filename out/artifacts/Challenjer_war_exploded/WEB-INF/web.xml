<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>AddUser</servlet-name>
        <servlet-class>app.servlets.user.AddUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddUser</servlet-name>
        <url-pattern>/AddUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AllUsers</servlet-name>
        <servlet-class>app.servlets.user.ListUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AllUsers</servlet-name>
        <url-pattern>/AllUsers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditUser</servlet-name>
        <servlet-class>app.servlets.user.EditUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditUser</servlet-name>
        <url-pattern>/EditUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteUser</servlet-name>
        <servlet-class>app.servlets.user.DeleteUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteUser</servlet-name>
        <url-pattern>/DeleteUser</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>AddCar</servlet-name>
        <servlet-class>app.servlets.car.AddCar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCar</servlet-name>
        <url-pattern>/AddCar</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AllCars</servlet-name>
        <servlet-class>app.servlets.car.ListCar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AllCars</servlet-name>
        <url-pattern>/AllCars</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EditCar</servlet-name>
        <servlet-class>app.servlets.car.EditCar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditCar</servlet-name>
        <url-pattern>/EditCar</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteCar</servlet-name>
        <servlet-class>app.servlets.car.DeleteCar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCar</servlet-name>
        <url-pattern>/DeleteCar</url-pattern>
    </servlet-mapping>
</web-app>